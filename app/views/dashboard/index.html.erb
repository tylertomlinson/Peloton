<br>
<div class ="dashboard">
<%= link_to 'Edit Profile', edit_user_registration_path, class: "btn btn-primary" %>
<%= link_to 'Add Ride', new_ride_path, class: "btn btn-primary" %>
<%= link_to 'Leaderboard', rides_path, class: "btn btn-primary" %>
</div>

<br><br><br>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>Duration</th>
      <th>Distance</th>
      <th>Average Speed</th>
    </tr>
  </thead>
  <tbody>
      <% @rides.each do |ride| %>
      <tr>
        <td><%= ride.date %></td>
        <td><%= ride.duration %></td>
        <td><%= ride.distance %></td>
        <td><%= ride.average_speed %></td>
      </tr>
      <% end %>



