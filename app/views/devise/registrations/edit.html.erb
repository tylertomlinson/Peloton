<br>
<section class="col-8 offset-2 col-sm-6 offset-sm-3">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <i class="fas fa-user"></i>
    <%= f.label :username %><br/>
    <%= f.text_field :username, autofocus: true, autocomplete: "username", class: 'form-control m-2' %>
  </div>
  <br>
  <div class="field">
    <i class="fas fa-envelope prefix"></i>
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control m-2' %>
  </div>
  <br>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <i class="fas fa-lock prefix"></i>
    <%= f.label "new Password" %><br/>
    <%= f.password_field :password, placeholder: "leave blank to keep current pwd", autocomplete: "new-password", class: 'form-control m-2' %>
    <% if @minimum_password_length %>
    <% end %>
  </div>
  <br>

  <div class="field">
    <i class="fas fa-lock prefix"></i>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control m-2' %>
  </div>
  <br>

  <div class="field">
    <%= f.label :current_password %> <br />
    <%= f.password_field :current_password, placeholder: "enter current pwd to confirm changes", autocomplete: "current-password", class: 'form-control m-2' %>
  </div>
<br>
  <div class="actions">
    <%= f.submit "Update", class: 'btn btn-outline-success btn-m-2' %>
  </div>
<% end %>

<%= button_to "Back", "/rides", class: 'btn btn-primary btn-m-2' %>
<section>
