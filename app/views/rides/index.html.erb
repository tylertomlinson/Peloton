<br><br><br><br>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>Rider</th>
      <th>Duration</th>
      <th>Distance</th>
      <th>Average Speed</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
      <% @rides.each do |ride| %>
      <tr>
        <td><%= ride.date %></td>
        <td><%= ride.user_id %></td>
        <td><%= ride.duration %></td>
        <td><%= ride.distance %></td>
        <td><%= ride.average_speed %></td>
        <td>
          <%= link_to(edit_ride_path(ride)) do %>
          <div class= "edit-icon">
            <span class="iconify" data-icon="ant-design:edit-outlined" data-inline="false"></span>
          </div>
          <% end %>
        </td>
        <td>
          <div class= "delete-icon">
            <%= button_to ride, method: :delete, data: { confirm: "Are you sure?" }, remote: true, class: "btn btn-danger" do %>
            <i class='fas fa-trash' style='font-size:36px'></i>
            <% end %>
          </div>
        </td>
        </tr>
        <% end %>
