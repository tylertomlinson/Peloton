<!DOCTYPE html>
<html>
  <head>
    <title>Peloton</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'true' %>
    <script src="https://code.iconify.design/1/1.0.7/iconify.min.js"></script>
   </head>

  <body>
    <nav class="navbar navbar-dark bg-dark navbar-expand-sm">
  <a class="navbar-brand" href="/">
    <img src="https://logosandtypes.com/wp-content/uploads/2020/07/Peloton.png" width="50" height="50" alt="logo">
    Peloton Challenge
  </a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar-list-4" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <% if user_signed_in? %>
  <div class="navbar-collapse collapse w-100 order-3 dual-collapse2">
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a class="nav-link" <%= link_to 'Edit Profile', edit_user_registration_path, :class => 'navbar-item' %> </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-item' %></a>
            </li>
        </ul>
    </div>

    <% else %>
    <div class="navbar-collapse collapse w-100 order-3 dual-collapse2">
          <ul class="navbar-nav ml-auto">
              <li class="nav-item">
                  <a class="nav-link" <%= link_to "Sign up", new_user_registration_path, :class => 'navbar-item' %> </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" <%= link_to "Login", new_user_session_path, :class => 'navbar-item'  %> </a>
              </li>
          </ul>
      </div>

    <% end %>
</nav>
    <%= yield %>
  </body>
</html>
